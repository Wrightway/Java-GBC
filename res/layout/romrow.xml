<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal">
	<TextView android:id="@+id/romname" android:text="Pokemon Silver"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="12sp" android:layout_weight="1"
		android:layout_gravity="center_vertical" android:layout_marginLeft="6dip" />
	<ImageView android:id="@+id/romimage"
		android:layout_width="30dip" android:layout_height="30dip" />
</LinearLayout>